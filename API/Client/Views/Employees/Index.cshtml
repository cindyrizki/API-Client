@{
    ViewData["Title"] = "Employee";
    Layout = "_LayoutNew";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h2 class="h3 mb-2 text-gray-800">Daftar Employee</h2>
</div>
<div class="card shadow mb-4">
    <div class="card-header">
        <button type="button" class="btn btn-primary" data-toggle="tooltip" data-placement="left" title="Register Employee" onclick="registerButton()"><i class="fas fa-user-plus"></i></button>
        <button type="button" class="btn btn-success" data-toggle="tooltip" data-placement="left" title="Export Excel" onclick="exportExcel()"><i class="far fa-file-excel"></i></button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="dataTable1" class="table table-active border" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>NIK</th>
                        <th>Nama</th>
                        <th>Phone</th>
                        <th>Birth Date</th>
                        <th>Salary</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>



@*Modal Register*@
<div class="modal fade bd-example-modal-lg" id="registerEmployee" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Register Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="register" name="register" class="need-validation user" novalidate>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label for="inputNIK">NIK</label>
                                <input type="text" class="form-control" id="inputNIK" name="nik" placeholder="Enter NIK" required>
                                <div class="invalid-feedback">
                                    Please insert your nik
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputFirstName">First Name</label>
                                <input type="text" class="form-control" id="inputFirstName" name="firstName" placeholder="Enter First Name" required>
                                <div class="invalid-feedback">
                                    Please insert your first name
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputLastName">Last Name</label>
                                <input type="text" class="form-control" id="inputLastName" name="lastName" placeholder="Enter Last Name" required>
                                <div class="invalid-feedback">
                                    Please insert your last name
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <label for="inputPhone">Phone</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <div class="input-group-text">+62</div>
                                </div>
                                <input type="text" class="form-control" id="inputPhone" name="phone" placeholder="Enter Phone" required>
                                <div class="invalid-feedback">
                                    Please insert your phone number
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputBirthDate">BirthDate</label>
                                <input type="date" class="form-control" id="inputBirthDate" name="birthDate" placeholder="Enter Birth Date" required>
                                <div class="invalid-feedback">
                                    Please insert your birth date
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputSalary">Salary</label>
                                <input type="number" class="form-control" id="inputSalary" name="salary" placeholder="Enter Salary" required>
                                <div class="invalid-feedback">
                                    Please insert your salary
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label for="inputEmail">Email</label>
                                <input type="text" class="form-control" id="inputEmail" name="email" placeholder="Enter Email" required>
                                <div class="invalid-feedback">
                                    Please insert your valid email
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputPassword">Password</label>
                                <input type="password" class="form-control" id="inputPassword" name="password" placeholder="Enter Password" required>
                                <div class="invalid-feedback">
                                    Please insert your password <br>
                                    min. 8 character (uppercase, lowercase, number, character)
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col">
                            <div class="form-group">
                                <label for="inputDegree">Degree</label>
                                <input type="text" class="form-control" id="inputDegree" name="degree" placeholder="Enter Degree" required>
                                <div class="invalid-feedback">
                                    Please insert your degree
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputGPA">GPA</label>
                                <input type="text" class="form-control" id="inputGPA" name="gpa" placeholder="Enter GPA" required>
                                <div class="invalid-feedback">
                                    Please insert your gpa
                                </div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="form-group">
                                <label for="inputState">University</label>
                                <select id="inputUnivId" class="form-control" name="univId" required>
                                </select>
                                <div class="invalid-feedback">
                                    Please insert your university
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label for="inputState">Role</label>
                                <select id="inputRoleId" class="form-control" name="roleId" required>
                                </select>
                                <div class="invalid-feedback">
                                    Please insert your role
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-info" @*id="clickBtn"*@ onclick="Validate()">Save changes</button>
            </div>
        </div>
    </div>
</div>

@*Modal Update*@
